{
  "build": {
    "base": {
      "ios": {
        "image": "macos-big-sur-11.4-xcode-12.5",
        "cocoapods": "1.10.2"
      }
    },
    "special:": {
      "extends": "base",
      "android": {
        "gradleCommand": ":app:assembleRelease"
      }
    },
    "release": {
      "extends": "base",
      "releaseChannel": "prod-0",
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    },
    "development": {
      "android": {
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "buildConfiguration": "Debug"
      },
      "distribution": "internal"
    },
    "alpha": {
      "extends": "base",
      "releaseChannel": "alpha-0",
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleRelease"
      },
      "ios": {
        "buildConfiguration": "Release",
        "credentialsSource": "local"
      }
    }
  },
  "cli": {
    "version": ">= 0.42.4"
  }
}
